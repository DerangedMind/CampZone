<h1 class="text-center">Welcome aboard Camp _name_</h1>

<div class="row">
  <div class="col-md-2 col-xs-1"></div>
  <div class="col-md-8 col-xs-10">
    <div class="form-box clearfix">
      <%= form_for :counselors do |form| %>
        <div class="form-group">
          <h3 class="text-center">Create your counselor account!</h3>
          <label for="counselors_first_name">First name</label>
          <%= form.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
        </div>
        <div class="form-group">
          <label for="counselors_last_name">Last name</label>
          <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
        </div>
        <div class="form-group">
          <label for="counselors_email">Email address</label>
            <%= form.text_field :email, class: 'form-control', placeholder: 'Email address' %>
        </div>
        <div class="form-group">
          <label for="counselors_password">Password</label>
           <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>

        <%= form.submit "Create account", class: 'btn btn-success pull-right' %>

      <% end %> <!-- end form -->
    </div> <!-- end form-box -->
  </div> 
</div> <!-- end row -->