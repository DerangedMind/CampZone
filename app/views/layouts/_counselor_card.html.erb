<div class="card">
  <div class="card-contents">
    <div class="card-avatar">
      <img class="" src="<%= Faker::LoremPixel.image('70x70') %>">
    </div>
    <div class="card-info">
      <div class="card-details">
        <p><%= person.user.first_name %> <%= person.user.last_name %></p>
        <p><%= person.alias %></p>
      </div>
      <div class="card-details">
        <p><%= person.user.email %></p>
      </div>
    </div>
  </div>
</div>