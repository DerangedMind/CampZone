<div class="card">
  <div class="card-contents">
    <div class="card-avatar">
      <img class="" src="<%= Faker::LoremPixel.image('70x70', false, 'people') %>">
    </div>
    <div class="card-info">
      <div class="card-details">
        <%= link_to "/#{role}/kids/#{person.id}" do %>
          <p><%= person.first_name %> <%= person.last_name %></p>
        <% end %>
        <p><%= person.birthdate %></p>
      </div>
      <div class="card-details">
        <p><%= person.parents[0].phone_number %></p>
      </div>
    </div>
  </div>
</div>
