<% group = object %>

<div class="card">
  <div class="card-contents">
    <div class="card-avatar">
      <img class="" src="<%= Faker::LoremPixel.image('70x70') %>">
    </div>
    <div class="card-info">
      <div class="card-details">
        <% if current_user.role != "parent" %>
        <%= link_to "/#{role}/groups/#{group.id}" do %>
        <p><%= group.name %></p>
        <% end %>
      <% else %>
        <p>
          <%= group.name %></p>
        <% end %>

        <p>Age Range:
          <%= group.min_age %>
          -
          <%= group.max_age %></p>
        <p>Starting:
          <%= group.start_date %></p>
      </div>
    </div>
  </div>
</div>
