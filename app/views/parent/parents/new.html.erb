<h1 class="text-center">Almost there...</h1>
<h4 class="text-center">We need a bit more information so we know how to reach you!</h4>
<div class="row">
  <div class="col-md-2 col-xs-1"></div>
  <div class="col-md-8 col-xs-10">
    <div class="form-box clearfix">
      <%= form_for @parent, url: parent_parents_path, method: 'post' do |form| %>
        <h3 class="text-center">Contact Info</h3>
        <div class="form-group">
          <label for="parents_address">Address</label>
          <%= form.text_field :address, class: 'form-control', placeholder: 'Address' %>
        </div>
        <div class="form-group">
          <label for="parents_postal_code">Postal Code</label>
            <%= text_field_tag 'Postal Code', nil, class: 'form-control', placeholder: "A1B 2C3" %>
        </div>
        <div class="form-group">
          <label for="parents_postal_code">City</label>
            <%= text_field_tag 'City', nil, class: 'form-control', placeholder: "Montreal" %>
        </div>
        <div class="form-group">
          <label for="parents_postal_code">Province/State</label>
            <%= text_field_tag 'Province/State', nil, class: 'form-control', placeholder: "QC" %>
        </div>
        <div class="form-group">
          <label for="parents_postal_code">Country</label>
            <%= text_field_tag 'Country', nil, class: 'form-control', placeholder: "Canada" %>
        </div>
        <div class="form-group">
          <label for="parents_phone_number">Phone Number</label>
          <%= form.telephone_field :phone_number, class: 'form-control', placeholder: '(xxx) xxx-xxxx' %>
        </div>
        <%= form.submit "Create Parent Account", class: 'btn btn-success pull-right' %>
      <% end %>
    </div>
  </div>
</div>
