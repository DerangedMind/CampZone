<h1 class="text-center">Almost there...</h1>
<h4 class="text-center">We need a bit more information so we know how to reach you!</h4>
<div class="row">
  <div class="col-md-2 col-xs-1"></div>
  <div class="col-md-8 col-xs-10">
    <div class="form-box clearfix">
      <h3 class="text-center">Contact Info</h3>
      <%= form_for @address, url: parent_parents_path, method: 'post' do |form| %>
      
        <div class="form-group">
          <%= form.label :street_address %>
          <%= form.text_field :street_address, class: 'form-control', placeholder: 'Address' %>
        </div>

        <div class="form-group">
          <%= form.label :apt_number %>
          <%= form.text_field :apt_number, class: 'form-control', placeholder: 'Apartment / Suite #' %>
        </div>

        <div class="form-group">
          <%= form.label :postal_code %>
          <%= form.text_field :postal_code, class: 'form-control', placeholder: "A1B 2C3" %>
        </div>

        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, class: 'form-control', placeholder: "Montreal" %>
        </div>

        <div class="form-group">
          <%= form.label :province %>
          <%= form.text_field :province, class: 'form-control', placeholder: "QC" %>
        </div>

        <div class="form-group">
          <%= form.label :country %>
          <%= form.text_field :country, class: 'form-control', placeholder: "Canada" %>
        </div>

        <div class="form-group">
          <label for="phone_number">Phone Number</label>
          <%= telephone_field_tag :phone_number, nil, class: 'form-control', placeholder: '(xxx) xxx-xxxx' %>
        </div>

        <%= form.submit "Save Contact Info", class: 'btn btn-success pull-right' %>
      <% end %>
    </div>
  </div>
</div>
