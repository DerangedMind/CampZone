<h1 class="text-center">Create a Parent Account!</h1>

<div class="row">
  <div class="col-md-2 col-xs-1"></div>
  <div class="col-md-8 col-xs-10">
    <div class="form-box clearfix">
      <%= form_for @parent do |form| %>
        <div class="form-group">
          <h3 class="text-center">Create Your New Parent Account!</h3>
          <label for="parents_address">Address</label>
          <%= form.text_field :address, class: 'form-control', placeholder: 'Address' %>
        </div>
        <div class="form-group">
          <label for="parents_phone_number">Phone Number</label>
          <%= form.telephone_field :phone_number, class: 'form-control', placeholder: 'Phone Number' %>
        </div>
        <%= form.submit "Create Parent Account", class: 'btn btn-success pull-right' %>
      <% end %>
    </div>
  </div>
</div>
