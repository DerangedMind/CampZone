<h1> Welcome <%= current_user.first_name %></h1>

<div class="row text-center">

  <div class="col-md-4">
    <h3> Total Groups: <%= @groups.count %></h3> 
    <%= link_to "View All Groups", director_groups_path, class:"btn btn-primary" %>
    <br />
     <div class="item-list">
      <% @groups.each do |group| %>
        <div class="row user-card">
          <div class="col-sm-2 col-xs-3">
            <img src="<%= Faker::Avatar.image("counselor-avatar", "50x50", "png", "set3") %>">
          </div>
          <div class="col-sm-6 col-xs-6 name">
            <%= link_to group.name, director_group_path(:id => group.id) %>
          </div>
          <div class="col-sm-2 col-xs-3 alias">

          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <h3> Total Counselors <%= @counselors.count %></h3> 
    <%= link_to "View All Counselors", director_counselors_path, class:"btn btn-primary" %>
    <br />
    <div class="item-list">
      <% @counselors.each do |counselor| %>
        <div class="row user-card">
          <div class="col-sm-2 col-xs-3">
            <img src="<%= Faker::Avatar.image("counselor-avatar", "50x50", "png", "set2") %>">
          </div>
          <div class="col-sm-6 col-xs-6 name">
            <%= link_to ("#{counselor.user.first_name} #{counselor.user.last_name}"), director_counselor_path(:id => counselor.id) %>
          </div>
          <div class="col-sm-2 col-xs-3 alias">
            <%= counselor.alias %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <h3> Total Kids: <%= @kids.count %></h3>
    <%= link_to "View All Kids", director_kids_path, class:"btn btn-primary" %> 
    <br />
    <div class="item-list">

    <% @kids.each_with_index do |kid, index| %> 
      <% if index.even? %><div class="row" id="kids-row"><% end %>
        <div class="col-sm-6 col-xs-6">
          <div class="user-card-sm">
            <img src="<%= Faker::Avatar.image("counselor-avatar", "50x50", "png", "set4") %>">
            <br>
            <%= link_to ("#{kid.first_name} #{kid.last_name}"), director_kid_path(:id => kid.id) %>
          </div>
        </div>
      <% if (index.odd?)  %></div><% end %>
    <% end %>

    </div>
  </div>

  <br />

</div>
