<h1 class="text-center"> Create a Camp! </h1>

<section class="row">
  <div class="col-md-2 col-xs-1"></div>
  <div class="col-md-8 col-xs-10 clearfix">
    <article>
      <% if flash[:error] %>
        <div class="alert alert-danger">
          <ul>
            <% flash[:error].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </article>
    <%= form_for @camp, url: director_camps_path, method: "post" do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', autofocus: true %>
    </div>
    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :phone_number %>
      <%= form.telephone_field :phone_number, class: 'form-control' %>
    </div>
    <%= form.submit :Submit, class: 'btn btn-success pull-right' %>

    <% end %>
  </div>
</section>
