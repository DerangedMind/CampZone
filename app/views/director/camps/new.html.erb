<h1 class="text-center"> Create a Camp! </h1>

<section class="row">
  <div class="col-md-2 col-xs-1"></div>
  <div class="col-md-8 col-xs-10 clearfix">
    <article>
      <% if flash[:error] %>
        <div class="alert alert-danger">
          <ul>
            <% flash[:error].each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </article>
    <%= form_for @address, url: director_camps_path, method: "post" do |form| %>


    <div class="form-group">
      <label for="name">Name</label>
      <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Name' %>
    </div>

<!--  -->
    <div class="form-group">
      <%= form.label :street_address %>
      <%= form.text_field :street_address, class: 'form-control', placeholder: 'Street Address' %>
    </div>
        <div class="form-group">
      <%= form.label :apt_number %>
      <%= form.text_field :apt_number, class: 'form-control', placeholder: 'Apartment / Suite #' %>
    </div>
    <div class="form-group">
      <%= form.label :city %>
      <%= form.text_field :city, class: 'form-control', placeholder: 'City' %>
    </div>
    <div class="form-group">
      <%= form.label :province %>
      <%= form.text_field :province, class: 'form-control', placeholder: 'Province' %>
    </div>
        <div class="form-group">
      <%= form.label :country %>
      <%= form.text_field :country, class: 'form-control', placeholder: 'Country'%>
    </div>
    <div class="form-group">
      <%= form.label :postal_code %>
      <%= form.text_field :postal_code, class: 'form-control', placeholder: 'Postal Code' %>
    </div>
<!--  -->
    <div class="form-group">
    <label for="phone_number">Phone Number</label>
    <%= telephone_field_tag :phone_number, nil, class: 'form-control', placeholder: '(xxx) xxx-xxxx' %>
    </div>



    <%= form.submit :Submit, class: 'btn btn-success pull-right' %>

    <% end %>

  </div>
</section>